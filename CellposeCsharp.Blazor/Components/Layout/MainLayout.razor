@inherits LayoutComponentBase

<div class="shell">
    <header class="topbar">
        <div class="brand">
            <div class="glow-dot"></div>
            <div>
                <div class="brand-title">Cellpose C#</div>
                <div class="brand-subtitle">Blazor client</div>
            </div>
        </div>
        <div class="links">
            <a href="/swagger" target="_blank" rel="noopener">API docs</a>
            <a href="https://github.com/" target="_blank" rel="noopener">Repo</a>
        </div>
    </header>

    <main class="content">
        @Body
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">x</span>
</div>
